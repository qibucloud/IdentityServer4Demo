@{
    ViewData["Title"] = "Home Page";
}

@using Microsoft.AspNetCore.Authentication

<h2>User Identity</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }

    <dt>access token</dt>
    <dd>
        @await Context.Authentication.GetTokenAsync("access_token")
    </dd>
</dl>